{% extends 'base.html.twig' %}

{% block title %}Location index{% endblock %}

{% block body %}
    <h1>Location index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Addresse</th>
                <th>Tel</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for location in locations %}
            <tr>
                <td>{{ location.id }}</td>
                <td>{{ location.addresse }}</td>
                <td>{{ location.Tel }}</td>
                <td>
                    <a href="{{ path('location_show', {'id': location.id}) }}"class="btn btn-primary">show</a>
                    <a href="{{ path('location_edit', {'id': location.id}) }}"class="btn btn-success">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('location_new') }}"class="btn btn-danger">Create new</a>
{% endblock %}
